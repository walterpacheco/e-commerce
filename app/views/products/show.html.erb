<div class="row">
    <div class="bd-example col-xl-5">
        <div class="carousel-outer">
                <%= image_tag @product.images.first, :class => "d-block w-100" %>
        </div>
    </div>


    <div class="bd-example col-xl-3">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel"> 
        <% if @product.images.attached?%>
            <% (0..(@product.images.count-1)).each do |i| %>
                <ol class="carousel-indicators">
                <% if i==0%>
                    <li data-target="#carouselExampleCaptions" data-slide-to=i class="active"></li>
                <% else%>    
                    <li data-target="#carouselExampleCaptions" data-slide-to=i></li>
                <% end %>  
                </ol>
            <% end %>
        <% end %>

        <% if @product.images.attached?%>
            <div class="carousel-inner">
                <% @product.images.each do |image|%>
                    <% if image == @product.images.first %>
                    <div class="carousel-item active">
                        <%= image_tag image, :class => "d-block w-100" %>
                        <div class="carousel-caption d-none d-md-block">
                        <h5>First slide label</h5>
                        <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
                        </div>
                    </div>
                    <% else%>   
                        <div class="carousel-item">
                        <%= image_tag image, :class => "d-block w-100" %>
                        <div class="carousel-caption d-none d-md-block">
                        <h5>Second slide label</h5>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        </div>
                    </div>
                    <% end %>
                <% end %>
            </div>
        <% end %>

            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="desc">
            <p> 
            Descripci√≥n de producto 1
            </p>
        </div>
    </div>


   

 <div class="bd-example col-xl-4">
              <h5> <%= @product.name %> </h5>
              <p> <%= @product.price %> </p>
              <%= link_to "Agregar al carro", product_orders_path(@product), class: 'btn btn-success', method: :post  %>
</div>




</div>



